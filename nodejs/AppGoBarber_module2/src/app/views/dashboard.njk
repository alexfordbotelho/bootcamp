      {% endfor %}
    </ul>

    {% if user.provider === true %}
      <a href="/app/scheduler" class="show-schedule">Agendamentos do dia</a>
    {% endif %}
    <a href="/app/logout" class="logout">Sair</a>
  </div>
{% endblock %}
